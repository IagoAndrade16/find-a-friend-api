generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id          String  @id @default(uuid())
  name        String
  city        String
  description String?

  Org   Org?    @relation(fields: [orgId], references: [id])
  orgId String?

  @@map("pets")
}

model Org {
  id      String @id @default(uuid())
  name    String
  address String
  phone   String

  pets Pet[]

  @@map("orgs")
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String
  password_hash String
  created_at    String

  @@map("users")
}
